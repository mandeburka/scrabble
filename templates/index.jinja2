<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Scrabble</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <link href="{{ url_for("static", filename="bootstrap/css/bootstrap.css") }}" rel="stylesheet">
    <link href="{{ url_for("static", filename="css/styles.css") }}" rel="stylesheet">
</head>

<body>

<div class="container" id="scrabble-game">
    <div class="row">
        <div class="span12">
            <form id="add-player">
                <div class="input-append">
                    <input class="span2" id="appendedInputButton" type="text" placeholder="ім'я гравця"/>
                    <button class="btn" type="submit">Додати!</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row" id="scrabble-table">
    </div>

</div>

<script type="text/template" id="player-template">
    <table class="player table table-striped">
        <thead>
        <tr>
            <th colspan="2"><%= name %></th>
            <th><i class="icon-remove remove-player"></i></th>
        </tr>
        <tr>
            <th>загалом</th>
            <th colspan="2" class="total-score"><%= points %></th>
        </tr>
        <tr>
            <th colspan="3">
                <form class="add-word">
                    <div class="input-append">
                        <input class="span2" type="text" placeholder="слово" name="word"/>
                        <button class="btn" type="submit">OK</button>
                    </div>
                </form>
            </th>
        </tr>
        </thead>
        <tbody>
            <% _.each(words.slice(0).reverse(), function(item){ %>
            <tr class="player-word">
                <td class="word"><%= item.get("word") %></td>
                <td class="points"><%= item.get("points") %></td>
                <td><i class="icon-remove" id="<%= item.cid %>"></i></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</script>

<script src="{{ url_for("static", filename="js/jquery-1.8.2.min.js") }}"></script>
<script src="{{ url_for("static", filename="js/underscore-min.js") }}"></script>
<script src="{{ url_for("static", filename="js/json2.js") }}"></script>
<script src="{{ url_for("static", filename="js/backbone-min.js") }}"></script>
<script src="{{ url_for("static", filename="js/scrabble.js") }}"></script>

</body>
</html>
